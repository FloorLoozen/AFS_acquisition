[flake8]
# Flake8 Configuration for AFS Acquisition
# Run with: flake8 src

# Maximum line length (aligned with Black formatter)
max-line-length = 120

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache

# Ignore specific error codes
ignore =
    E203,  # Whitespace before ':' (conflicts with Black)
    E501,  # Line too long (handled by Black)
    W503,  # Line break before binary operator (outdated)
    E402,  # Module level import not at top (sometimes needed for sys.path)
    F401,  # Imported but unused (common in __init__.py)

# Maximum complexity
max-complexity = 15

# Show source code for errors
show-source = True

# Count errors
count = True

# Per-file ignores
per-file-ignores =
    __init__.py:F401,E401
    src/main.py:E402
